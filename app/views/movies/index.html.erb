<div id='top-area'>    

    <h1 id="rotten-title">Rotten Mangoes</h1>

    <%= form_tag(movies_path, :id => 'search-form', :class => 'container', method: "get") do %>
  
  <span class="search-words">
    <%= label_tag :title, "Search by title:" %>
  </span>
  
  <span class="search-boxes">
    <%= text_field_tag :title, params[:title] %>
  </span>

  <span class="search-words">
    <%= label_tag :director, "Director:" %>
  </span>

  <span class="search-boxes">
    <%= text_field_tag :director, params[:director] %>
  </span>

  <span class="search-words">
    <%= label_tag :runtime_in_minutes, "runtime in minutes:" %>
  </span>

  <span class="search-boxes">
    <%= select_tag :runtime_in_minutes, options_for_select([["", 1],["Under 90 minutes", 2],["Between 90 and 120 minutes", 3],["Over 120 minutes", 4]], params[:runtime_in_minutes]) %>
  </span>
  
  <span id="search-button">
    <%= submit_tag "Search", { name: nil } %>
  </span>
<% end %>
    
    <span id="submit-a-movie"><%= link_to "Submit a movie!",  new_movie_path %> </span>
    <hr id='horizontal-bar'>
</div>
    <%= render 'movie' %>
